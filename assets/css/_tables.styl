table.gascert-theme-1
    position relative
    border-collapse collapse
    background-color #fff
    box-shadow 0 2px 5px 0 rgba(0,0,0,.16),0 2px 10px 0 rgba(0,0,0,.12)
    border none
    thead
        tr
            th
                background #fff
                position relative
                border none
                h4
                    margin 10px 0
    tbody
        tr
            td:first-child
                text-align center
                width 5%
            td:nth-child(2)
                width 20%
            td
                background-color #f4f4f4
                color #212121
                position relative
        tr:hover
            td
                background #fff
                transition background-color .2s cubic-bezier(.4,0,.2,1)
                i
                    color #868686
    tr
        td, th
            font-weight 400
            padding 12px 18px 12px 24px
            box-sizing border-box
            vertical-align top
